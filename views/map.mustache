<!-- *** example map grabbed from Google *** -->

<!DOCTYPE html>
<html>
  <head>
    <title>Clement's Map App</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="stylesheet" href="./styles.css" type="text/css">
    <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      /*#map {
        height: 50%;
      }*/
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <br>
    <div>
      <form method="post" class="latLongInputForm">
        <input type="text" name="userLat" placeholder="enter latitude">
        <br>
        <input type="text" name="userLong" placeholder="enter longitude">
        <br>
        <input type="submit" value="Map it!">
      </form>
    </div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: {{lat}}, lng: {{long}}},
          // 35.993017   -78.904614
          zoom: 15
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA0FgOhga7HIeYfO6_dMTsHk0-t_27zq9E&callback=initMap"
    async defer></script>
  </body>
</html>
